<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://java.sun.com/xml/ns/javaee"
         xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd"
         id="WebApp_ID" version="3.0">
    <display-name>VZUB rest service</display-name>
    <context-param>
        <param-name>APPLICATIECODE</param-name>
        <param-value>JI</param-value>
    </context-param>


    <filter>
        <filter-name>logxFilter</filter-name>
        <filter-class>nl.ocwduo.logx.filter.LogxFilter</filter-class>
        <init-param>
            <param-name>applicationId</param-name>
            <param-value>JI</param-value>
        </init-param>
        <init-param>
            <param-name>subApplicationId</param-name>
            <param-value>vzub</param-value>
        </init-param>
        <!-- Profielen: https://wiki.prd.duo.nl/display/PORTALEN/LogX+Profielen-->
        <init-param>
            <param-name>uri:/pad/dat/wordt/bedoeld</param-name>
            <param-value>gui-private</param-value>
        </init-param>
        <init-param>
            <param-name>uri:/een/andere/transactie</param-name>
            <param-value>gui-private</param-value>
        </init-param>
    </filter>

    <filter-mapping>
        <filter-name>logxFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>
</web-app>